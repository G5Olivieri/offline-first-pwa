# Local Environment Variables
# This file contains default values for development
VITE_APP_TITLE=Modern POS System
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Database Configuration
VITE_COUCHDB_URL=http://localhost:5984
VITE_ENABLE_SYNC=true
VITE_COUCHDB_USERNAME=admin
VITE_COUCHDB_PASSWORD=password

# Localization
VITE_DEFAULT_LOCALE=en-US
VITE_DEFAULT_CURRENCY=USD

# UI Configuration
VITE_MAX_SUGGESTIONS=4

# Development
VITE_LOG_LEVEL=debug
VITE_ENABLE_DEBUG_MODE=true

VITE_TRACKING_ERROR_ENABLED=true
VITE_TRACKING_ERROR_CONSOLE_ENABLED=true
VITE_TRACKING_ERROR_REMOTE_ENABLED=false
VITE_TRACKING_ERROR_REMOTE_ENDPOINT=/api/error-logs

VITE_TRACKING_USER_ENABLED=false
VITE_TRACKING_USER_CONSOLE_ENABLED=true
