# Environment Configuration
# Copy this file to .env.local and adjust values for your environment

# Application Settings
VITE_APP_TITLE=Modern POS System
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Database Configuration
VITE_COUCHDB_URL=http://localhost:5984
VITE_COUCHDB_USERNAME=admin
VITE_COUCHDB_PASSWORD=password
VITE_ENABLE_SYNC=true

# Localization Settings
VITE_DEFAULT_LOCALE=en-US
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_TIMEZONE=America/New_York

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DEBUG_MODE=false

# UI Configuration
VITE_THEME_PRIMARY_COLOR=#3B82F6
VITE_THEME_SECONDARY_COLOR=#10B981
VITE_PRODUCTS_PER_PAGE=20
VITE_MAX_SUGGESTIONS=4

# Security Settings
VITE_SESSION_TIMEOUT=1800000
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_ENABLE_CSRF_PROTECTION=true

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_BASE_URL=http://localhost:3000/api

# Development Settings (only available in development)
VITE_MOCK_DATA=false
VITE_LOG_LEVEL=info
