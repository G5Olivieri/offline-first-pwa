{
  "name": "pos-offline-first",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development",
    "dev:prod": "vite --mode production",
    "build": "vue-tsc -b && vite build --mode production",
    "build:dev": "vue-tsc -b && vite build --mode development",
    "build:staging": "vue-tsc -b && vite build --mode staging",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "env:validate": "node scripts/validate-env.mjs",
    "serve": "npm run build && npm run preview",
    "health-check": "./scripts/health-check.sh",
    "backup": "./scripts/backup.sh",
    "backup:list": "./scripts/backup.sh list",
    "backup:cleanup": "./scripts/backup.sh cleanup",
    "docker:build": "docker build -t pos-frontend .",
    "docker:run": "docker run -p 3000:80 pos-frontend",
    "k8s:deploy": "helm upgrade --install pos-frontend ./helm-chart",
    "k8s:remove": "helm uninstall pos-frontend",
    "istio:deploy": "./scripts/deploy-istio.sh",
    "istio:validate": "./scripts/validate-istio.sh",
    "istio:cleanup": "./scripts/cleanup-istio.sh",
    "istio:cleanup:force": "./scripts/cleanup-istio.sh --force",
    "istio:cleanup:istio": "./scripts/cleanup-istio.sh istio",
    "istio:cleanup:complete": "./scripts/cleanup-istio.sh complete",
    "istio:cleanup:status": "./scripts/cleanup-istio.sh status",
    "istio:config": "./scripts/deploy-istio.sh config",
    "istio:monitoring": "./scripts/deploy-istio.sh monitoring"
  },
  "dependencies": {
    "@vee-validate/zod": "^4.15.1",
    "events": "^3.3.0",
    "fuse.js": "^7.1.0",
    "pinia": "^3.0.3",
    "pouchdb-browser": "^9.0.0",
    "pouchdb-find": "^9.0.0",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1",
    "zod": "^3.25.57"
  },
  "devDependencies": {
    "@pinia/testing": "^0.1.6",
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^24.0.3",
    "@types/pouchdb-browser": "^6.1.5",
    "@types/pouchdb-find": "^7.3.3",
    "@vite-pwa/assets-generator": "^0.2.6",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.21",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "constants-browserify": "^1.0.0",
    "crypto-browserify": "^3.12.1",
    "happy-dom": "^15.11.6",
    "https-browserify": "^1.0.0",
    "jsdom": "^25.0.1",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "pouchdb-adapter-memory": "^9.0.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.2",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vite": "^6.0.11",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^2.1.8",
    "vue-tsc": "^2.2.0",
    "workbox-window": "^7.3.0"
  },
  "resolutions": {
    "sharp": "0.32.6",
    "sharp-ico": "0.1.5"
  }
}
